{{!< default}} <main class="content">
    {{#post}}
    <div class="row">
        <div class="col s10">
            <div id="artDetail" class="container">
                <div class="card">
                    <div class="card-content article-info">
                        <div class="article-tag">
                            {{#if tags}}
                            {{#foreach tags}}
                            <a href="{{url}}" target="_blank"><span class="chip tag-bg-color">{{name}}</span></a>
                            {{/foreach}}
                            {{/if}}
                        </div>
                        <div class="author-info">
                            <span>
                                <i class="fa fa-calendar fa-fw"></i>{{date}}
                            </span>
                        </div>
                    </div>
                    <hr>
                    <div class="card-content article-card-content">
                        <div id="articleContent">
                            {{content}}
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col s12">
                                {{> reward}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s2">
            <div id="toc" class="hiden-div">
                <h2 style="margin-left:80px;">目录</h2>
                {{> toc}}
            </div>
        </div>
    </div>


    {{/post}}



    </main>