    <script src="{{asset "libs/jquery/jquery-2.2.0.min.js"}} "></script>
    <style>
        svg {
    color: #fff;
    fill: var(--theme-color,#4CD964);
    height: 80px;
    width: 80px;
  }
  .nav-transparent .github-corner{
      opacity: 0 !important;
  }
  .github-corner{
    position: absolute;
    z-index: 10000000;
    top: -12px;
    right: -8px;
    transform: scale(.8);
  }
  .github-corner:hover .octo-arm {
    animation: a 0.56s ease-in-out;
  }
  .github-corner .octo-arm {
    animation: none;
  }
  @keyframes a {
    0%,
    to {
      transform: rotate(0);
    }
    20%,
    60% {
      transform: rotate(-25deg);
    }
    40%,
    80% {
      transform: rotate(10deg);
    }
  }
  </style>
  {{ghost_head}}
</head>

<body>
       {{> site-nav}}
    <script>
        // Dynamically switch banner pictures every day.
        $('.bg-cover').css('background-image', 'url(assets/medias/banner/' + new Date().getDay() + '.jpg)');
    </script>
    {{{body}}}
    {{> floating-header}}
    

